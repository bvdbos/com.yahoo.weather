{
  "id": "com.yahoo.weather",
  "version": "1.0.0",
  "compatibility": "0.x || 1.x",
  "category": "internet",
  "name": {
    "en": "Yahoo Weather",
    "nl": "Yahoo Weer"
  },
  "description": {
    "en": "Weather information from Yahoo",
    "nl": "Weer informatie van Yahoo"
  },
  "author": {
    "name": "Athom B.V.",
    "email": "info@athom.nl"
  },
  "permissions": [
    "homey:manager:geolocation",
    "homey:manager:speech-output"
  ],
  "speech": [
    {
      "id": "weather",
      "importance": 1,
      "triggers": {
        "en": [
          "weather"
        ],
        "nl": [
          "weer"
        ]
      }
    },
    {
      "id": "today",
      "importance": 0.3,
      "triggers": {
        "en": [
          "today"
        ],
        "nl": [
          "vandaag"
        ]
      }
    },
    {
      "id": "tomorrow",
      "importance": 0.3,
      "triggers": {
        "en": [
          "tomorrow"
        ],
        "nl": [
          "morgen"
        ]
      }
    },
    {
      "id": "day_after_tomorrow",
      "importance": 0.3,
      "triggers": {
        "en": [
          "day after tomorrow",
          "today after tomorrow"
        ],
        "nl": [
          "overmorgen",
          "de dag na morgen"
        ]
      }
    }
  ]
}