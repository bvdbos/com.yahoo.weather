{
  "id": "com.yahoo.weather",
  "version": "1.0.0",
  "compatibility": ">=0.8.30",
  "category": "internet",
  "name": {
    "en": "Weather",
    "nl": "Weer"
  },
  "description": {
    "en": "Weather information from Yahoo",
    "nl": "Weer informatie van Yahoo"
  },
  "author": {
    "name": "Athom B.V.",
    "email": "info@athom.nl"
  },
  "permissions": [
    "homey:manager:geolocation",
    "homey:manager:speech-output"
  ],
  "speech": [
    {
      "id": "weather",
      "importance": 1,
      "triggers": {
        "en": [
          "weather"
        ],
        "nl": [
          "weer"
        ]
      }
    },
    {
      "id": "temperature",
      "importance": 0.65,
      "triggers": {
        "en": [
          "temperature",
          "hot",
          "warm",
          "cold"
        ],
        "nl": [
          "temperatuur",
          "warm",
          "koud"
        ]
      }
    },
    {
      "id": "will",
      "importance": 0.3,
      "triggers": {
        "en": [
          "will",
          "be",
          "going",
          "expected"
        ],
        "nl": [
          "wordt",
          "word",
          "verwacht",
          "verwachtte"
        ]
      }
    },
    {
      "id": "outside",
      "importance": 0.3,
      "triggers": {
        "en": [
          "outside",
          "outdoor",
          "outdoors",
          "outer"
        ],
        "nl": [
          "buiten"
        ]
      }
    },
    {
      "id": "current",
      "importance": 0.3,
      "triggers": {
        "en": [
          "current",
          "present",
          "right now",
          "moment"
        ],
        "nl": [
          "huidige",
          "momenteel",
          "actueel",
          "acutele"
        ]
      }
    }
  ]
}